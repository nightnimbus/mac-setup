{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    // JIRA and Confluence integration via remote OAuth
    // Required for the /pr command to fetch ticket context
    "atlassian": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "enabled": true,
      // OAuth is handled automatically - run: opencode mcp auth atlassian
    },

    // Library documentation lookup
    // Provides instant access to framework and library docs
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      // OAuth is handled automatically - run: opencode mcp auth context7
    }
  }
}
